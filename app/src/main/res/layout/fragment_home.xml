<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/logoanuin" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:overScrollMode="never"
                android:clipToPadding="false"

                android:layout_width="match_parent"
                android:layout_height="115dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:padding="20dp">

                <EditText
                    android:id="@+id/txtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_search"
                    android:drawableLeft="@drawable/ic_search"
                    android:hint="Saya membutuhkan jasa"
                    android:singleLine="true"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/textMekanik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSearch"
                    android:layout_marginTop="10dp"
                    android:text="MEKANIKAL &amp; ELEKTRONIK"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/g1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtSearch"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/textMekanik"
                    android:background="@color/colorCard" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerElektronik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textMekanik"
                    android:layout_marginTop="5dp"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/textDekor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recyclerElektronik"
                    android:layout_marginTop="10dp"
                    android:text="DEKOR &amp; BANGUNAN"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/g2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/recyclerElektronik"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/textDekor"
                    android:background="@color/colorCard" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerDekor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDekor"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>