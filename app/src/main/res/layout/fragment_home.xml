<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".HomeFrag">

    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/imageSlide"
            android:layout_width="match_parent"
            android:layout_height="175dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/border_search"
                android:drawableLeft="@drawable/ic_search"
                android:hint="Saya membutuhkan jasa"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textMekanik"
                android:layout_below="@id/txtSearch"
                android:layout_marginTop="10dp"
                android:text="MEKANIKAL &amp; ELEKTRONIK"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/g1"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_below="@id/txtSearch"
                android:layout_toRightOf="@id/textMekanik"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="2dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerElektronik"
                android:layout_below="@id/textMekanik"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textDekor"
                android:layout_below="@id/recyclerElektronik"
                android:layout_marginTop="10dp"
                android:text="DEKOR &amp; BANGUNAN"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/g2"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_below="@id/recyclerElektronik"
                android:layout_toRightOf="@id/textDekor"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="2dp"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerDekor"
                android:layout_below="@id/textDekor"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>