<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/imgNotif"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/notif"
        android:padding="8dp"
        android:src="@drawable/notif_white" />

    <TextView
        android:id="@+id/txtJudulNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imgNotif"
        android:ellipsize="end"
        android:maxEms="30"
        android:maxLines="1"
        android:text="jdlllllllllllll"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtIsiNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJudulNotif"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/imgNotif"
        android:text="isi"
        android:textSize="14dp"
        android:maxLines="1"
        android:maxLength="40"
        android:ellipsize="end"/>

    <View
        android:id="@+id/v1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/txtIsiNotif"
        android:layout_marginTop="18dp"
        android:background="@color/colorView"
        android:paddingHorizontal="7dp" />

</RelativeLayout>