<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".introNlogin.LoginActivity">

    <ImageView
        android:src="@drawable/ic_launcher_foreground"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_weight="2"></ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:layout_centerHorizontal="true">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:background="#F4F2EF"
                android:layout_height="50dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etEmail"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:background="#F4F2EF"
                    android:hint="Email"></EditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#F4F2EF"
                android:layout_height="50dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F4F2EF"
                    android:inputType="textPassword"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/passwd"
                    android:id="@+id/etPassword"
                    android:hint="Password"></EditText>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="12dp"
                android:text="Login"
                android:textColor="#fff"
                android:background="@color/btnColorOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Button>
            <TextView
                android:id="@+id/FPass"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/btnColorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dont have an account?"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Register"
                android:onClick="Register"
                android:textColor="#DC7633"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>