<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".introNlogin.LoginActivity">

    <ImageView
        android:src="@drawable/logoanuin"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:layout_weight="2"></ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:background="#F4F2EF"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <View
                    android:background="@color/colorView"
                    android:layout_width="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/etEmail"
                    android:background="#F4F2EF"
                    android:hint="Email"></EditText>
            </LinearLayout>
            <LinearLayout
                android:background="#F4F2EF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/passwd"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <View
                    android:background="@color/colorView"
                    android:layout_width="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_height="40dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#F4F2EF"
                    android:layout_marginLeft="8dp"
                    android:inputType="textPassword"
                    android:id="@+id/etPassword"
                    android:hint="Password"></EditText>
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_marginTop="12dp"
                android:text="Login"
                android:textColor="#fff"
                android:background="@drawable/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Button>
            <TextView
                android:id="@+id/FPass"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/btnColorOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dont have an account?"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Register"
                android:onClick="Register"
                android:textColor="#DC7633"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>