<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".other.submenusetting.AboutUsActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/aboutbg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAbout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/call_center" />
            <TextView
                android:id="@+id/txtAbout"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ini tentang FixID"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:gravity="center"
                android:id="@+id/descAbout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ini Deskripsi FixID"
                android:textColor="@color/cardview_dark_background"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/backAbout"
        android:src="@drawable/arrow_back"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>