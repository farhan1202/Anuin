<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="18dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrder"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp">
                <TextView
                    android:id="@+id/tvKodep"
                    android:layout_margin="3dp"
                    android:paddingTop="3dp"
                    android:text="Kode pemesanan"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvKode"
                    android:layout_toEndOf="@id/tvKodep"
                    android:layout_margin="3dp"
                    android:paddingTop="3dp"
                    android:text="Kode pemesanan"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <Button
                    android:id="@+id/btnWait"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_btn"
                    android:text="Selesai"
                    android:textColor="#27AE60"
                    android:textSize="10dp" />
            </RelativeLayout>
            <View
                android:background="@color/colorView"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="1dp">
            </View>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp">
                <TextView
                    android:id="@+id/tvMotode"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:text="Perbaikan / instalsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvTipe"
                    android:layout_margin="2dp"
                    android:text="AC"
                    android:textStyle="bold"
                    android:textColor="@color/dot_light_screen1"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="15dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/tvTimeNDate"
                    android:layout_margin="2dp"
                    android:textSize="10dp"
                    android:text="10 FEB 2020  14:30 WIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/tvToko"
                    android:layout_margin="2dp"
                    android:text="00:59:10"
                    android:textSize="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>