<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAddress">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFormAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnSimpan"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/toolbarFormAddress"
        android:layout_marginHorizontal="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="ALAMAT"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:background="@drawable/modal"
                android:hint="Rumah, apartement atau lainnya"
                android:padding="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="LOKASI"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/modal"
                android:drawableRight="@drawable/marker"
                android:textSize="14sp"
                android:hint="Tentukan Lokasi"
                android:padding="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="KABUPATEN / KOTA"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerKabKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/modal"
                android:spinnerMode="dropdown"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="KECAMATAN"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/modal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="KELURAHAN"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerKelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/modal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="6dp"
                android:text="PROPERTI"
                android:textColor="#000000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerProperti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/modal"
                />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn"
        android:text="SIMPAN"
        android:textColor="@color/white" />




</RelativeLayout>