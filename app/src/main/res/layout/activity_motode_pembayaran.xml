<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order.MetodePembayaranActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="11dp">
            <TextView
                android:id="@+id/tvMotode"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Perbaikan / instalsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tvTipe"
                android:layout_margin="2dp"
                android:text="AC"
                android:textStyle="bold"
                android:textColor="@color/dot_light_screen1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <View
            android:background="@color/colorView"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_height="1dp">
        </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_gravity="center"
                        android:text="Total pembayaran : "
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginTop="6dp"
                        android:text="RP 105.000">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cvTunai"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvTunai"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Tunai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:layout_below="@id/tvTunai"
                android:text="Pembayaran langsung tunai"
                android:textSize="11dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cvBank"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvBank"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Bank Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:layout_below="@id/tvBank"
                android:text="BCA, BNI, BRI, Mandiri, permata etc"
                android:textSize="11dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cvEWalet"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvWalet"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="E-Walet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_gravity="center"
                android:layout_below="@id/tvWalet"
                android:text="Gopay, Dana, Ovo"
                android:textSize="11dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>